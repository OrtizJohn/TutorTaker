<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/header %>
</head>
  <body style="background-color:#000000">
    <div class="topnav">
      <a class="active"href="#Profile">Profile</a>
      <a class="active"href="#about">About</a>
    </div>
    <div class="container-fluid">
      <br>
      <h1 style="text-align: center;color:#C7BA7C;font-family:georgia">Find a Tutor</h1>
      <div class="form-group">
        <form action="/tutor-finder/filter" method="GET">
          <label for="filterType" style="color:#C7BA7C;font-family:georgia" class="h6">Filter</label>
          <select name="filterChoice" class="custom-select" id="filterType" onchange="this.form.submit()">
            <option>Select a Filter</option>
            <option value="1">Alphabetical</option>
            <option value="2">Rating</option>
            <option value="3">Major</option>
          </select>
        </form>
        <form action="/userProfile">
          <select name="tutorDropDown" class="custom-select" id="tutorDropDown">
            <option>Select a Tutor</option>
          <% for (var i = 0;i < tutors.length; i++) { %>
            <option value=<%= tutors[i].id%>><%= tutors[i].firstname + " " +  tutors[i].lastname + "\t" + tutors[i].rating + "\t" + tutors[i].subjects%><</option>  
          <% } %>  
          </select>
        </form>
      </div>
    </div>
  </body>
</html>